@page "/profile"
@inject IUserEndpoint UserEndpoint
@inject IConfiguration config

<PageTitle>Products</PageTitle>

<h3>Products</h3>

<div class="container-fluid">
    @if (profile is null)
    {
        <div class="row">
            <p>No profiles have been loaded.</p>
        </div>
    }
    else
    {
        <div class="row">
            <p>@profile.FirstName</p>
            <p>@profile.LastName</p>
            <p>@profile.EmailAddress</p>
            <p>@profile.OP</p>
            <p>@profile.RT</p>
            <p>@profile.CB</p>
            <p>@profile.Pack</p>
            <p>@profile.FirstAider</p>
            <p>@profile.FireWarden</p>
        </div>
    }
</div>

@code {
    private UserModel? profile;
    private string? api;

    protected override async Task OnInitializedAsync()
    {
        profile = await UserEndpoint.GetAll();
    }
}